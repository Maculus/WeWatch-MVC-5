@model WeWatch.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@{
    var className = Model.Customers.Count > 0 ? "popular" : null;   @* A class is dynamically selected if the # of customers are over a specified number*@
}

<h2 class="@className">@Model.Movie.Name</h2>     @*class added here*@


@if (Model.Customers.Count == 0)
{
    <text> No one has rented this movie before.</text>
}

else
{
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li> @customer.Name </li>
        }
    </ul>    
}

